@model List<Movie>
@{
    ViewData["Title"] = "Contacts";
}

<div class="mb-2">
    <a asp-controller="Contact" asp-action="Add">Add a New Contact</a>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Notes</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contact in Model)
        {
            <tr>
                <td>@contact.Name</td>
                <td>@contact.Phone</td>
                <td>@contact.Address.Name</td>
                <td>@contact.Notes</td>
                <td>
                    <a asp-controller="Movie" asp-action="Edit" asp-route-id="@contact.MovieId" asp-route-slug="@contact.Slug">Edit</a>
                    <a asp-controller="Movie" asp-action="Delete" asp-route-id="@contact.MovieId" asp-route-slug="@contact.Slug">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
