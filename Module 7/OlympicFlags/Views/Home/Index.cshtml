@model IEnumerable<Country>
@{
    ViewData["Title"] = "Olympic Games";
    string Active(string filter, string selected)
    {
        // Check for null or empty values before comparison
        return (!string.IsNullOrEmpty(filter) && !string.IsNullOrEmpty(selected) &&
                filter.ToLower() == selected.ToLower()) ? "active" : "";
    }

}

<div class="row">
    <div class="col-sm-3">
        <h3 class="mt-3">Conference</h3>
        <div class="list-group">
            @foreach (Category category in ViewBag.Categories)
            {
                <a asp-action="Index"
                   asp-route-activeCategory="@category.CategoryID"
                   asp-route-activeGame="@ViewBag.activeGame"
                   class="list-group-item @Active(category.CategoryID,
                                           ViewBag.activeCategory)">
                    @category.CategoryName
                </a>
            }
        </div>
        <h3 class="mt-3">Division</h3>
        <div class="list-group">
            @foreach (Games games in ViewBag.Games)
            {
                <a asp-action="Index"
                   asp-route-activeCategory="@ViewBag.ActiveCategory"
                   asp-route-activeGame="@games.GamesID"
                   class="list-group-item @Active(games.GamesID,
                                           ViewBag.activeGame)">
                    @games.GamesName
                </a>
            }
        </div>
    </div>
    <div class="col-sm-9">
        <ul class="list-inline">
            @foreach (Country country in Model)
            {
                <li class="list-inline-item">
                    <img src="~/images/@country.CountryFlag" alt="@country.CountryName"
                         title="@country.CountryName | @country.Category.CategoryName @country.Game.GamesName" />
                </li>
            }
        </ul>
    </div>
</div>
