@model CountryListViewModel

@{
    ViewData["Title"] = "Olympic Countries";
}

<div class="row">
    <div class="col-sm-3">
        <h3 class="mt-3">Category</h3>
        <div class="list-group">
            @foreach (Category category in Model.Categories)
            {
                <a asp-action="Index"
                   asp-route-activeConf="@category.CategoryID"
                   asp-route-activeDiv="@Model.ActiveGame"
                   class="list-group-item @Model.CheckActiveCategory(category.CategoryID)">
                    @category.CategoryName
                </a>
            }
        </div>
        <h3 class="mt-3">Games</h3>
        <div class="list-group">
            @foreach (Games game in Model.Games)
            {
                <a asp-action="Index"
                   asp-route-activeConf="@Model.ActiveCategory"
                   asp-route-activeDiv="@game.GamesID"
                   class="list-group-item @Model.CheckActiveGame(game.GamesID)">
                    @game.GamesName
                </a>
            }
        </div>
    </div>
    <div class="col-sm-9">
        <ul class="list-inline">
            @foreach (Country country in Model.Countries)
            {
                <li class="list-inline-item">
                    <a asp-action="Details" asp-route-id="@country.CountryID">
                        <img src="~/images/@country.CountryFlag" alt="@country.CountryName"
                             title="@country.CountryName | @country.Category.CategoryName @country.Game.GamesName" />
                    </a>
                </li>
            }
        </ul>
    </div>
</div>