@model CountryViewModel

@{
    ViewData["Title"] = "Country Details";
}

<h2 class="text-center">Country Details</h2>

<div class="row">
    <div class="col-6 offset-3">
        <ul class="list-group text-center">
            <li class="list-group-item">
                <img src="~/images/@Model.Country.CountryFlag" alt="@Model.Country.CountryName" />
                <h3>@Model.Country.CountryName</h3>
            </li>
            <li class="list-group-item">
                <h4>Category: @Model.Country.Category.CategoryName</h4>
            </li>
            <li class="list-group-item">
                <h4>Games: @Model.Country.Game.GamesName</h4>
            </li>
            <li class="list-group-item">
                <form asp-action="Add" method="post">
                    <a asp-action="Index" class="btn btn-primary"
                       asp-route-activeConf="@Model.ActiveCategory"
                       asp-route-activeDiv="@Model.ActiveGame">Return to Home Page</a>
                    <button type="submit" class="btn btn-primary">
                        Add to Favorites
                    </button>
                    <input type="hidden" asp-for="Country.CountryID" />
                </form>
            </li>
        </ul>
    </div>
</div>
